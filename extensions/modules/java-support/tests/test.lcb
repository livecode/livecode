module com.livecode.java.tests

use com.livecode.module.javasupport
use com.livecode.java

public handler TestObject()
	if the operating system is not "mac" then
		skip test "java object created" because "not implemented on" && the operating system
	else
		variable tObj as JObject
		put Object_Constructor([]) into tObj

		variable tClass as JObject
		put Object_getClass(tObj) into tClass

		test "Object created" when Class_getName(tClass) is "java.lang.Object"
	end if
end handler

end module