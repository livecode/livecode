module com.livecode.widget.native.button.shared

use com.livecode.engine

private variable mScriptObject as ScriptObject
public handler SetScriptObject(in pObj as ScriptObject)
   put pObj into mScriptObject
end handler

public handler PostAction() returns nothing
	post "mouseUp" to mScriptObject
    
    // Wake the engine to deal with the posted signal
    MCEngineRunloopBreakWait()
end handler

end module
