<?xml version="1.0" encoding="utf-8"?>
<VisualStudioToolFile
	Name="Gentle"
	Version="8.00"
	>
	<Rules>
		<CustomBuildRule
			Name="Gentle"
			DisplayName="Gentle"
			CommandLine="$(SolutionDir)_build\windows\$(ConfigurationName)\gentle.exe [SubDir] [inputs]"
			Outputs="$(InputName).c"
			FileExtensions="*.g"
			ExecutionDescription="Running gentle for [inputs]..."
			>
			<Properties>
				<StringProperty
					Name="SubDir"
					DisplayName="Subdirectory"
					Description="Subdirectory"
					Switch="-subdir [value]"
				/>
			</Properties>
		</CustomBuildRule>
		<CustomBuildRule
			Name="Reflex"
			DisplayName="Reflex"
			CommandLine="$(SolutionDir)_build\windows\$(ConfigurationName)\reflex.exe [SubDir]&#x0D;&#x0A;"
			Outputs="gen.l"
			FileExtensions="*.lit;*.tkn"
			ExecutionDescription="Running reflex..."
			>
			<Properties>
				<StringProperty
					Name="SubDir"
					DisplayName="Subdirectory"
					Description="Subdirectory"
					Switch="-subdir [value]"
				/>
			</Properties>
		</CustomBuildRule>
	</Rules>
</VisualStudioToolFile>
